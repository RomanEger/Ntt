@model (NttTest.ViewModels.ProductViewModel, SelectList)
@{
    ViewData["Title"] = "Управление товарами";
}

<form method="post" asp-action="AddOrUpdateProductPost" class="container text-center"> 
    <label>Название</label>
    <input id="title" required class="w-100 mb-3" name="title" type="text" value="@Model.Item1.Title"/><br/>
    <label>Описание</label>
    <textarea id="description" class="w-100 mb-3" name="description" type="text">@Model.Item1.Description</textarea><br/>
    <label>Цена</label>
    <input id="price" required pattern="^[0-9]+([\\,|\\.][0-9]+)?$" name="price" class="w-100 mb-3" type="text" value="@Model.Item1.Price"/><br/>
    <label>Количество</label>
    <input id="quantity" required pattern="[0-9]+" class="w-100 mb-3" name="quantity" type="text" value="@Model.Item1.Quantity"/><br/>
    <label>Категория</label>
    <select id="category" required class="w-100 mb-3" name="category" asp-items="@Model.Item2"></select><br/>
    <input type="submit" class="btn-primary rounded-3" value="Сохранить"/>
</form>

<script>
    
    function setIdOnLoad(){
        document.cookie = "productId=@Model.Item1.Id;"
        console.log(document.cookie["productId"])
    }
    
    setIdOnLoad()
</script>